{
  "short_name": "MyRead",
  "name": "MyRead Browser Extension",
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
   "128": "favicon.ico"
  },
  "permissions": [
    "tabs"
  ],
  "manifest_version": 2,
  "version": "0.0.1",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "MyRead Chrome Extension"
  },
  "content_security_policy": "script-src script-src-elem 'self' 'unsafe-eval' https://apis.google.com/js/api.js; object-src 'self'"

}
