{
  "short_name": "MyRead",
  "name": "MyRead Browser Extension",
  "description": "A browser extension that allows you to login to your MyRead account and truly construct your blog as you go!",
  "icons": {
    "16": "favicon.ico",
    "48": "favicon.ico",
   "128": "favicon.ico"
  },
  "permissions": [
    "tabs",
    "identity",
    "cookies"
  ],
  "host_permissions": [
    "https://my-read-08.herokuapp.com/*",
    "https://myreaddev-ext-logins-duhpcboow.herokuapp.com/*",
    "*://localhost/*"
  ],
  "manifest_version": 3,
  "version": "0.0.1",
  "action": {
    "default_popup": "index.html",
    "default_title": "MyRead Chrome Extension"
  },
  "externally_connectable": {
    "matches": ["https://my-read-08.herokuapp.com/*", "https://myreaddev-ext-logins-duhpcboow.herokuapp.com/*", "*://localhost/*"]
  }
}
